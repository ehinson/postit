

<div class='btn-group nav_item pull-right'>
  <%=  link_to "#", class: 'btn btn-small dropdown-toggle', 'data-toggle' => 'dropdown' do %>
    <span class="pull-left">Categories</span> <span class='caret pull-right'></span>
  <%  end  %>
  <ul class='dropdown-menu'>
    <% Category.all.each do |category|  %>
    <li>
      <%= link_to category.name, category_path(category)  %>
    </li>
      <%  end  %>
    <li class="divider"></li>
    <%  if logged_in?  %>
      <li>
        <%= link_to(new_category_path) do %>
          <i class="icon-plus"></i>
          New Category
        <%  end  %>
      </li>
    <%  end  %>

  </ul>
</div>

<%  if logged_in?  %>
  <div class='nav_item pull-right'>
    <%=  link_to "New Post", new_post_path, class: 'btn btn-success btn-small'  %>
  </div>
  <div class="btn-group nav_item pull-left">
      <%= link_to('#', class: 'btn btn-small dropdown-toggle', 'data-toggle'=> 'dropdown') do %>
      <span class="pull-left">Welcome, <%= current_user.username  %></span>
      <span class='caret pull-right'></span>
      <%  end  %>
      <ul class="dropdown-menu">
        <li>
          <%= link_to edit_user_path(current_user) do %>
            <i class="icon-pencil"></i>
            edit profile
          <%  end  %>
        </li>
        <li>
          <%= link_to user_path(current_user) do %>
            <i class="icon-user"></i>
            view profile
          <%  end  %>
        </li>
        <li>
          <%= link_to logout_path do %>
            <i class="icon-circle-arrow-left"></i>
            logout
          <%  end  %>
        </li>      
      </ul>
  </div>

<%  else #logged out %>
 <div class='nav_item pull-right'>
    <%=  link_to "Register", register_path, class: 'btn btn-success btn-small'  %>
  </div>
  <div class='nav_item pull-right'>
    <%=  link_to "Login", login_path, class: 'btn btn-success btn-small'  %>
  </div>
  <%  end  %>